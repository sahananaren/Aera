{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2017",               // or "es2015" minimum to support iterable Uint8Array
    "lib": ["es2017", "dom"],         // includes ES features and browser APIs
    "downlevelIteration": true,       // enables correct iteration of modern types like Uint8Array
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
